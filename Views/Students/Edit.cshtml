@model StudentPortal.Web.Models.Entities.Student

<div class="container mt-5">
    <h2 class="mb-4">Edit Student</h2>

    @if (Model == null)
    {
        <p>No Student was found with this Id</p>
    }
    else
    {
        <form method="post">
            <div class="mb-3">
                <label for="id" class="form-label">ID</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" placeholder="Enter your name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="Enter your email" asp-for="Email" />
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Phone</label>
                <input type="tel" class="form-control" placeholder="Enter your phone number" asp-for="Phone" />
            </div>

            <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="subscribed">Subscribe</label>
            <br /><br />
            <button type="submit" class="btn btn-success">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Students">Delete</button>
        </form>
    }
</div>
